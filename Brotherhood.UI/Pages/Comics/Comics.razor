@page "/comics"
@inject IHttpClientFactory http
@inject IRepository repository
@*@inject ComicViewModel ComicView*@


<h3>Comics</h3>
<a href="/comics/create" class="btn btn-info mb-2">Crear</a>

@if (ComicDTO == null)
{
    <p>Cargando......</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Capitulos</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comic in ComicDTO)
            {
                <tr>
                    <td><a href="">@comic.Id</a></td>
                    <td>@comic.Title</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public List<ComicsDTO> ComicDTO { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var responseHttp = await repository.GetAsync<List<ComicsDTO>>("api/comics");
        ComicDTO = responseHttp.Response;
        
